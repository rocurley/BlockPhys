-- Initial blockPhysics.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                blockPhysics
version:             0.1.0.0
-- synopsis:            
-- description:         
-- license:             
-- license-file:     LICENSE
author:              Roger
-- maintainer:          
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Physics,
                       Render,
                       World,
                       Waldo,
                       Utils,
                       Map2D,
                       PolynomialRoot
  default-extensions:  FlexibleContexts
  build-depends:       base >=4.7 && < 5,
                       gloss,
                       containers,
                       mtl,
                       transformers,
                       hmatrix-quadprogpp,
                       hmatrix,
                       lens,
                       safe,
                       ieee754,
                       polynomial,
                       QuickCheck
  default-language:    Haskell2010
  GHC-Options: -Wall
               -fprof-auto

executable blockPhysics-exe
  main-is:             Main.hs
  default-extensions:  FlexibleContexts
  build-depends:       base >=4.7 && < 5,
                       blockPhysics,
                       gloss,
                       containers,
                       mtl,
                       transformers,
                       lens
  default-language:    Haskell2010
  GHC-Options: -Wall

test-suite blockPhysics-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base >=4.7 && < 5,
                       containers,
                       mtl,
                       lens,
                       safe,
                       ieee754,
                       polynomial,
                       hspec,
                       blockPhysics,
                       QuickCheck
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
  GHC-Options: -Wall

Benchmark blockPhysics-bench
  type:                exitcode-stdio-1.0
  hs-source-dirs:      bench
  main-is:             Bench.hs
  build-depends:       base >=4.7 && < 5,
                       blockPhysics,
                       containers,
                       mtl,
                       lens,
                       blockPhysics,
                       criterion
  default-language:    Haskell2010
  GHC-Options: -Wall
               -fprof-auto
